

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id          Int       @id @default(autoincrement())
  regNumber   String    @unique
  name        String
  subjects    Subject[]
}

model Subject {
  id        Int     @id @default(autoincrement())
  name      String
  score     Float
  student   Student @relation(fields: [studentId], references: [id])
  studentId Int
} 